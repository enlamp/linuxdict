install
cdrom
lang en_US.UTF-8
keyboard ru
network --device eth0 --bootproto dhcp --hostname #KSAUTO# 
firewall --disabled eth0 --ssh
rootpw  123456
selinux --disabled
timezone Europe/Moscow

bootloader --location=mbr --driveorder=hda
firstboot --disable
reboot

# Partitioning
clearpart --all --initlabel --drives=hda
part /boot --fstype ext3 --size=200 --ondisk=hda
part pv.2 --size=0 --grow --ondisk=hda
volgroup sys --pesize=32768 pv.2
logvol / --fstype ext3 --name=root --vgname=sys --size=1 --grow
logvol swap --fstype swap --name=swap --vgname=sys --size=1024

%packages
@core
mc

%post

